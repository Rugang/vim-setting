"source ~/.vimrc

" Make external commands work through a pipe instead of a pseudo-tty
"set noguipty

" set the GUI font to use
set guifont=Consolas\ 11,"Consolas:h11:b:cANSI","Monaco:h13",Monaco\ 13

" Start GUI Maximised
"au GUIEnter * simalt ~x

" Hide the mouse when typing text
set mousehide 

" remove tool bar
set guioptions-=T
set guioptions-=m

" Set colour map
"colorscheme blue
"colorscheme cobalt
"colorscheme darkZ
"colorscheme darkslategray
"colorscheme fruity
"colorscheme ir_black
"colorscheme kib_darktango
"colorscheme oceandeep
"colorscheme ps_color
"colorscheme pyte
colorscheme twilight2
"colorscheme zenburn

